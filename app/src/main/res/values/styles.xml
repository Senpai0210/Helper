<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="EditTextStyle">
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:background">@drawable/rectangle_1</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">10dp</item>
    </style>

    <style name="ButtonStyle">
        <!--<item name="android:background">@drawable/radius_button</item> -->
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">#19AFBD</item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundColor">@color/ButtonColor</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>