<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Здесь настраивается ваша тема. -->
    </style>

    <style name="EditTextStyle">
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:background">@drawable/rectangle_1</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">10dp</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:background">@drawable/radius_button</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">#19AFBD</item>
        <item name="backgroundColor">#19AFBD</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="RecyclerTextViewStyle">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">130dp</item>
        <item name="background">@drawable/recycler_radius</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_marginLeft">18dp</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_marginTop">113dp</item>
    </style>
</resources>