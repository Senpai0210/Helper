<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="EditTextStyle">
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:background">@drawable/rectangle_1</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">10dp</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:background">@drawable/radius_button</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">#2A8086</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="fontFamily">@font/roboto_flex</item>
    </style>

    <style name="RecyclerTextViewStyle">
        <item name="android:layout_width">@dimen/_120sdp</item>
        <item name="android:layout_height">@dimen/_110sdp</item>
        <item name="background">@drawable/recycler_radius</item>
    </style>
</resources>